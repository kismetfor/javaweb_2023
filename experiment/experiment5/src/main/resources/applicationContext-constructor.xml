<!-- applicationContext-constructor.xml -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 使用构造注入 -->
    <bean id="employee1" class="com.example.beaninstantiationandassembly.Employee">
        <property name="name" value="章鱼小"/>
        <property name="workNumber" value="202113840217"/>
    </bean>

    <bean id="employee2" class="com.example.beaninstantiationandassembly.Employee">
        <property name="name" value="徐小涛"/>
        <property name="workNumber" value="202113840220"/>
    </bean>

    <bean id="corp" class="com.example.beaninstantiationandassembly.Corp">
        <constructor-arg value="ABC Corp"/>
        <constructor-arg>
            <list>
                <ref bean="employee1"/>
                <ref bean="employee2"/>
            </list>
        </constructor-arg>
    </bean>
</beans>
